        <activity
            android:name=".PartitaActivity"
            android:label="@string/title_activity_partita" >
        </activity>
        <activity
            android:name=".PartecipaActivity"
            android:label="@string/title_activity_partecipa" >
        </activity>
        <activity
            android:name=".ModificaProfiloActivity"
            android:label="@string/title_activity_modifica_profilo" >
        </activity>
        <activity
            android:name=".ConfermaPartecipaActivity"
            android:label="@string/title_activity_conferma_partecipa" >
        </activity>
        <activity
            android:name=".InfoActivity"
